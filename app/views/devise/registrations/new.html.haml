%h2 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email, :class => "control-label"
    .controls
      = f.email_field :email, :autofocus => true, :placeholder => "Email", :required => true
  .control-group
    = f.label :password, :class => "control-label"
    .controls
      = f.password_field :password, :placeholder => "Password", :required => true
  .control-group
    = f.label :password_confirmation, :class => "control-label"
    .controls
      = f.password_field :password_confirmation, :placeholder => "Password", :required => true
  .control-group
    = f.label :first_name, :class => "control-label"
    .controls
      = f.text_field :first_name, :placeholder => "First Name", :required => true
  .control-group
    = f.label :last_name, :class => "control-label"
    .controls
      = f.text_field :last_name, :placeholder => "Last Name", :required => true
  .control-group
    = f.label :alias, :class => "control-label"
    .controls
      = f.text_field :alias, :placeholder => "Alias", :required => true
  .control-group
    = f.label :dob, :class => "control-label"
    .controls
      = date_select :user, :dob, { :start_year => 1900, :end_year => Time.now.year }, :class => "user-dob"
  .form-actions
    = f.submit "Sign up", :class => "btn btn-primary"

= render "devise/shared/links"
